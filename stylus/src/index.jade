doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    title Slides

    link(rel='stylesheet', type='text/css', href='build/build.css')
    link(rel='icon' type='image/png' href='../common/posvaicon.png')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:300,600' rel='stylesheet' type='text/css')

  body

    include ../../utils/utils.jade

    article
      +section('flamingo-hello.gif')
        h1
          img(src='images/stylus.png')
        h5 Pimp your style
        div.bottom
          a.pull-right.icon-link(href='https://github.com/posva')
            img.icon(src='../common/githubicon.svg')
            span posva

      +section('boring1.gif')
        h2.bullet CSS Problems
        ul
          li Unorganized
          li WET
            small  (Write Everything Twice)
            span  Oriented
          li Useless characters
          li Browser dependent
          li Hard to mantain
            small  in larger projects

      section
        pre
          code.language-css.
            body {
              font: 12px Helvetica, Arial, sans-serif;
            }
            a.button {
              -webkit-border-radius: 5px;
              -moz-border-radius: 5px;
              border-radius: 5px;
            }

      section
        h3 Minification
        pre
          code.language-css.
            /*                                    wow such css such minify */
            body{font:12px Helvetica,Arial,sans-serif}a.button{-webkit-border-radius:5px;-moz-border-radius:5px;border-radius:5px}

      section
        h3 WET
        pre
          code.language-css.
            /* Same color */
            .button {
              color: pink;
              /* A bunch of stuff */
            }
            p {
              color: pink;
              /* A bunch of stuff */
            }

      section
        h3 WET
          small  (again)
        pre
          code.language-css.no-back.
            /* Same property, different values */
            .button {
              -webkit-border-radius: 5px;
              -moz-border-radius: 5px;
              border-radius: 5px;
            }
            p {
              -webkit-border-radius: 15px;
              -moz-border-radius: 15px;
              border-radius: 15px;
            }

      section
        h3 WET
          small  (even more)
        pre
          code.language-css.no-back.
            /* Nested properties */
            .message {
              -webkit-border-radius: 5px;
              -moz-border-radius: 5px;
              border-radius: 5px;
            }
            .message .icon {
              color: white;
            }
            .message .text {
              font: 12px Helvetica, Arial, sans-serif;
            }

